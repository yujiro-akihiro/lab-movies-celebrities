<h2>Edit Movie</h2>

<form action="/movies/{{movie._id}}/edit" method="POST">
  <div>
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" value="{{movie.title}}" required>
  </div>
  <div>
    <label for="genre">Genre:</label>
    <input type="text" id="genre" name="genre" value="{{movie.genre}}" required>
  </div>
  <div>
    <label for="plot">Plot:</label>
    <textarea id="plot" name="plot" required>{{movie.plot}}</textarea>
  </div>
  <div>
    <label for="cast">Cast:</label>
    <select id="cast" name="cast" multiple>
      {{#each celebrities}}
        <option value="{{this._id}}" {{#if (contains this._id ../movie.cast)}}selected{{/if}}>{{this.name}}</option>
      {{/each}}
    </select>
  </div>
  <button type="submit">Update</button>
</form>

<a href="/movies/{{movie._id}}">Cancel</a>
